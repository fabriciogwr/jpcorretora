<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="rootLayout" prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Cadastros">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#showCadastroClientes" text="Clientes" />
                  <MenuItem mnemonicParsing="false" onAction="#showCadastroImoveis" text="Imóveis" />
                  <MenuItem mnemonicParsing="false" text="Contratos" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Novo">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleNovoCliente" text="Cliente" />
                  <MenuItem mnemonicParsing="false" text="Imóvel" />
                  <MenuItem mnemonicParsing="false" text="Contrato" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
